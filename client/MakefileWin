SRCDIR=./src
COMMONSRCDIR=../lib/src
INCDIR=../lib/include
#LIBS = C:\ProjectCourseSnomos\include
INCLUDE = -IC:\msys2\mingw64\include\SDL2 -I$(INCDIR)
CFLAGS = -g $(INCLUDE) -c 
LDFLAGS = -lmingw32 -lSDL2main -lSDL2 -lSDL2_image -lSDL2_net -lSDL2_ttf -lSDL2_mixer -lm
CC = gcc

snomosClient: main.o character.o snowball.o map.o button.o text.o sounds.o controller.o logic.o view.o
	@echo "Building Snomos"
	$(CC) -o snomosClient main.o character.o snowball.o map.o button.o text.o sounds.o controller.o logic.o view.o $(LDFLAGS)

main.o: $(SRCDIR)/main.c $(INCDIR)/character.h $(INCDIR)/characterData.h $(INCDIR)/snowball.h $(INCDIR)/map.h $(INCDIR)/controller.h $(INCDIR)/logic.h $(INCDIR)/view.h
	$(CC) $(CFLAGS) $(SRCDIR)/main.c 

character.o: $(COMMONSRCDIR)/character.c $(INCDIR)/character.h $(INCDIR)/characterData.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/character.c

snowball.o: $(COMMONSRCDIR)/snowball.c $(INCDIR)/snowball.h $(INCDIR)/characterData.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/snowball.c 

controller.o: $(COMMONSRCDIR)/controller.c $(INCDIR)/controller.h $(INCDIR)/character.h $(INCDIR)/snowball.h $(INCDIR)/sounds.h $(INCDIR)/characterData.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/controller.c

logic.o:  $(COMMONSRCDIR)/logic.c $(INCDIR)/logic.h $(INCDIR)/character.h $(INCDIR)/snowball.h $(INCDIR)/sounds.h $(INCDIR)/characterData.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/logic.c

view.o: $(COMMONSRCDIR)/view.c $(INCDIR)/view.h $(INCDIR)/character.h $(INCDIR)/snowball.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/view.c

map.o: $(COMMONSRCDIR)/map.c $(INCDIR)/map.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/map.c

button.o: $(COMMONSRCDIR)/button.c $(INCDIR)/button.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/button.c

text.o: $(COMMONSRCDIR)/text.c $(INCDIR)/text.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/text.c

sounds.o: $(COMMONSRCDIR)/sounds.c $(INCDIR)/sounds.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/sounds.c

clean: 
	rm *.o
	rm *.exe